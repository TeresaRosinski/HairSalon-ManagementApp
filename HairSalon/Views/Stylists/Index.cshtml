@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<div class="jumbotron">
  <h2 class = "text-center">Current Stylists</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    @foreach (Stylist stylist in Model)
    {
      <tr>
      <td>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</td>
      </tr>
    }
  </tbody>
</table>

@if (@Model.Count == 0)
{
  <h4>There are currently no Stylists</h4>
} 



<button class="btn">@Html.ActionLink("Add New Stylist", "Create")</button>