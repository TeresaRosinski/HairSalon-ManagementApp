@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1 class = "text-center">Current Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>There are currently no Stylists</h3>
} 

<table class="tbale table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    @foreach (Stylist stylist in Model)
    {
      <tr>
      <td>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</td>
      </tr>
    }
  </tbody>
</table>


<button >@Html.ActionLink("Add New Stylist", "Create")</button>