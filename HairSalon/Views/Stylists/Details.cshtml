@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist;

<br/>
<h4>Details for: @Html.DisplayFor(model => model.Name)</h4>


@if (@Model.Clients.Count == 0)
{
  <p>no clients found</p>
}

<ul>
@foreach (Client client in @Model.Clients)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) </li>
}
</ul>

<button class="btn">@Html.ActionLink("Add Client", "Create", "Clients" )</button> 
<button class="btn">@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</button>
<button class="btn">@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</button>